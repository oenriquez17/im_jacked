<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Detailed Progress</title>

    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
    <script src="/jquery/jquery.js"></script>
</head>

<body>
    <%- include('navbar') %>

    <br>

    <div class="container">
        <form id="muscle-filter" method="get" action="detailprogress">
            <div class="form-group">
                <label for="exercise">Exercise</label>
                <select class="form-control" id="exercise" name="exercise"></select>
            </div>
        </form>

        <br>

        <canvas id="canvas"></canvas>
	</div>

    <script src="/js/bootstrap.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

    <script type="text/javascript">

        // Hides chart when first loaded
        $('#canvas').hide();
        
        // Populate dropdown with list of provinces
        let dropdown = $('#exercise');

        dropdown.empty();

        dropdown.append('<option disabled>Choose exercise</option>');
        dropdown.prop('selectedIndex', 0);

        var available_exercises = JSON.parse('<%- JSON.stringify(exercises) %>');
        $.each(available_exercises, function(i, exercise) {
            var id = available_exercises[i].id;
            var name = available_exercises[i].name;
            dropdown.append($('<option></option>').attr('value', id).text(name));
        });

        // HTTP Get when option selected
        $('select').change(function() {
            $('#canvas').show(); 
            
            var exercise = $('select#exercise').val();
            var uri = "/filterbyexercise?exercise=" + exercise; 
            
            $.get(uri, function(data, status){
                var workout_entries = data;

                var date_list = [];
                var weight_list = [];

                for (var i = 0; i < workout_entries.length; i++) {
                    date_list.push(workout_entries[i].entry_date);
                    weight_list.push(workout_entries[i].weight);
                }
                
                config.data.labels = date_list;
                config.data.datasets[0].data = weight_list;
                

                chart.update();
            });    
        });

        const ctx = document.getElementById('canvas').getContext('2d');
               
        const config = {
			type: 'line',
			data: {
				labels: [],
                datasets: 
                [
                    {
                    backgroundColor: 'rgb(0, 128, 0, 0.5)',
					borderColor: 'rgb(0, 128, 0)',
					data: [],
					fill: true,
                    }
                ]
			},
			options: {
				responsive: true,
				scales: {
					xAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Date'
						}
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Weight (Lbs)'
						}
					}]
                },
                legend: {
                    display:false
                }
			}
        };
        
        const chart = new Chart(ctx, config);
        
        window.onload = function() {
            window.myLine = chart;
		};
    </script>
</body>

</html>
