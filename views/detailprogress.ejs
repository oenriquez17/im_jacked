<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Detailed Progress</title>

    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
    <script src="/jquery/jquery.js"></script>
</head>

<body>
    <%- include('navbar') %>

    <br>

    <div class="container">
        <form id="muscle-filter" method="get" action="detailprogress">
            <div class="form-group">
                <label for="exercise">Exercise</label>
                <select class="form-control" id="exercise" name="exercise"></select>
            </div>
        </form>

        <br>

        <canvas id="weight-canvas"></canvas>

        <br>
        <br>

        <canvas id="reps-canvas"></canvas>

        
	</div>

    <script src="/js/bootstrap.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

    <script type="text/javascript">

        // Hides chart when first loaded
        $('#weight-canvas').hide();
        $('#reps-canvas').hide();
        
        // Populate dropdown with list of provinces
        let dropdown = $('#exercise');

        dropdown.empty();

        dropdown.append('<option disabled>Choose exercise</option>');
        dropdown.prop('selectedIndex', 0);

        var available_exercises = JSON.parse('<%- JSON.stringify(exercises) %>');
        $.each(available_exercises, function(i, exercise) {
            var id = available_exercises[i].id;
            var name = available_exercises[i].name;
            dropdown.append($('<option></option>').attr('value', id).text(name));
        });

        var id = '<%- id %>';
        if(id){
            $('#weight-canvas').show(); 
            $('#reps-canvas').show();

            $('#exercise').hide();

            var uri = "/filterbyexercise?exercise=" + id; 
            
            update_chart(uri);
        }

        // HTTP Get when option selected
        $('select').change(function() {
            $('#weight-canvas').show(); 
            $('#reps-canvas').show();
            
            var exercise = $('select#exercise').val();
            var uri = "/filterbyexercise?exercise=" + exercise; 
            
            update_chart(uri);  
        });

        function update_chart(uri){
            $.get(uri, function(data, status){
                var workout_entries = data;

                var date_list = [];
                var weight_list = [];
                var reps_list = [];

                for (var i = 0; i < workout_entries.length; i++) {
                    date_list.push(workout_entries[i].entry_date);
                    weight_list.push(workout_entries[i].weight);
                    reps_list.push(workout_entries[i].reps_completed);
                }
                
                weight_config.data.labels = date_list;
                weight_config.data.datasets[0].data = weight_list;

                reps_config.data.labels = date_list;
                reps_config.data.datasets[0].data = reps_list;
                
                weight_chart.update();
                reps_chart.update();
            });   
        }

        const weight_ctx = document.getElementById('weight-canvas').getContext('2d');
        const reps_ctx = document.getElementById('reps-canvas').getContext('2d');
               
        const reps_config = {
			type: 'line',
			data: {
				labels: [],
                datasets: 
                [
                    {
                    backgroundColor: 'rgb(255, 0, 0, 0.5)',
					borderColor: 'rgb(255, 0, 0)',
					data: [],
                    fill: true,
                    lineTension: 0
                    }
                ]
			},
			options: {
                responsive: true,
				scales: {
					xAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Date'
						}
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Reps'
						}
					}]
                },
                legend: {
                    display:false
                }
			}
        };

        const weight_config = {
            type: 'line',
			data: {
				labels: [],
                datasets: 
                [
                    {
                    backgroundColor: 'rgb(0, 128, 0, 0.5)',
					borderColor: 'rgb(0, 128, 0)',
					data: [],
                    fill: true,
                    lineTension: 0
                    }
                ]
			},
			options: {
				responsive: true,
				scales: {
					xAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Date'
						}
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Weight (Lbs)'
						}
					}]
                },
                legend: {
                    display:false
                }
			}
        };
        
        const weight_chart = new Chart(weight_ctx, weight_config);
        const reps_chart = new Chart(reps_ctx, reps_config);
        
        window.onload = function() {
            window.myLine = weight_chart;

            window.myLine = reps_chart;
		};
    </script>
</body>

</html>
