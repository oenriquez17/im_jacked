<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Exericse</title>

    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
    <script src="/jquery/jquery.js"></script>
</head>

<body>
    <%- include('navbar') %>

    <br>

    <div id="exercise-form" class="container">
        <form action="add_edit_exercise" method="post">
            <div class="form-group">
                <label for="exercise-name">Exercise</label>
                <input type="text" class="form-control" id="exercise-name" name="exercise" placeholder="Exercise name" required>
            </div>
            <div class="form-group">
                <label for="muscles-worked">Muscle worked</label>
                <select class="form-control" id="muscles-worked" name="muscle" required></select>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="bodyweight" name="bodyweight">
                    <label class="form-check-label" for="bodyweight">Bodyweight Exercise</label>
                </div>
            </div>

            <br>

            <button class="btn btn-dark float-right" type="submit">Submit</button>
        </form>
    </div>

    <script type="text/javascript">
        let dropdown = $('#muscles-worked');

        dropdown.empty();

        dropdown.append('<option disabled>Choose muscle worked</option>');
        dropdown.prop('selectedIndex', 0);

        var muscles_worked = '/data/muscles_worked.json';

        // Populate dropdown with list of provinces
        $.getJSON(muscles_worked, function(data) {
            $.each(data, function(key, entry) {
                dropdown.append($('<option></option>').attr('value', entry.id).text(entry.name));
            })
        });

    </script>
    <script src="/js/bootstrap.js" type="text/javascript"></script>

</body>

</html>
