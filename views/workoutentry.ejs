<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>Workout Entry</title>

    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
    <script src="/jquery/jquery.js"></script>

</head>

<body>
    <%- include('navbar') %>

    <br>

    <div id="workout-entry-form" class="container">
        <form>
            <div class="form-group">
                <label for="workout-date">Workout Date</label>
                <input class="form-control" type="date" id="workout-date">
            </div>
            <div class="form-group">
                <label for="exercise">Exercise</label>
                <select class="form-control" id="exercise">
                </select>
            </div>
            <div class="form-group">
                <label for="sets">Sets</label>
                <input class="form-control" type="number" id="sets" placeholder="Enter the number of sets performed">
            </div>
            <div class="form-group">
                <label for="reps">Reps</label>
                <input class="form-control" type="number" id="reps" placeholder="Enter the number of reps per set performed">
            </div>
            <div class="form-group">
                <label for="weight">Weight</label>
                <div class="input-group">
                    <input type="number" class="form-control" placeholder="Enter weight">
                    <div class="input-group-append">
                        <span class="input-group-text" id="basic-addon2">Lbs</span>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script>
        var now = new Date();

        var day = ("0" + now.getDate()).slice(-2);
        var month = ("0" + (now.getMonth() + 1)).slice(-2);

        var today = now.getFullYear() + "-" + (month) + "-" + (day);

        $('#workout-date').val(today);
    </script>
    <script src="/js/bootstrap.js" type="text/javascript"></script>

</body>
</html>
